/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary: #00ff88;
    --secondary: #0066ff;
    --dark-bg: #0a0e27;
    --darker-bg: #050816;
    --card-bg: #151b3d;
    --text-primary: #ffffff;
    --text-secondary: #b4bcd0;
    --gradient: linear-gradient(135deg, #00ff88, #0066ff);
    --shadow: 0 10px 40px rgba(0, 255, 136, 0.1);
    --glow: 0 0 20px rgba(0, 255, 136, 0.3);
    --transition: all 0.3s ease;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: var(--dark-bg);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* Admin Toggle Button */
.admin-toggle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--gradient);
    border: none;
    color: var(--darker-bg);
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 9999;
    box-shadow: var(--glow);
    transition: var(--transition);
}

.admin-toggle:hover {
    transform: scale(1.1) rotate(90deg);
}

/* Login Modal */
.login-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(10px);
    z-index: 11000;
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.login-content {
    background: var(--card-bg);
    border-radius: 15px;
    border: 2px solid var(--primary);
    box-shadow: 0 0 50px rgba(0, 255, 136, 0.3);
    max-width: 400px;
    width: 90%;
    animation: slideDown 0.4s ease;
}

@keyframes slideDown {
    from { transform: translateY(-50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.login-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: var(--darker-bg);
    border-bottom: 2px solid var(--primary);
    border-radius: 13px 13px 0 0;
}

.login-header h2 {
    color: var(--primary);
    font-size: 1.3rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.close-login {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
    width: 35px;
    height: 35px;
    border-radius: 50%;
    cursor: pointer;
    transition: var(--transition);
    font-size: 1rem;
}

.close-login:hover {
    background: var(--primary);
    color: var(--darker-bg);
    transform: rotate(90deg);
}

.login-form {
    padding: 2rem;
}

.login-form .form-group {
    margin-bottom: 1.5rem;
}

.login-form label {
    display: block;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
}

.login-form input[type="password"] {
    width: 100%;
    padding: 1rem;
    background: var(--darker-bg);
    border: 2px solid rgba(0, 255, 136, 0.2);
    border-radius: 10px;
    color: var(--text-primary);
    font-size: 1rem;
    font-family: inherit;
    transition: var(--transition);
}

.login-form input[type="password"]:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 15px rgba(0, 255, 136, 0.3);
}

.login-error {
    display: none;
    background: rgba(255, 68, 68, 0.1);
    color: #ff4444;
    padding: 0.8rem;
    border-radius: 8px;
    border: 1px solid #ff4444;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.btn-login {
    width: 100%;
    padding: 1rem;
    background: var(--gradient);
    border: none;
    border-radius: 10px;
    color: var(--darker-bg);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.btn-login:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
}

.login-hint {
    margin-top: 1.5rem;
    padding: 1rem;
    background: rgba(0, 102, 255, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(0, 102, 255, 0.3);
    color: var(--text-secondary);
    font-size: 0.85rem;
    text-align: center;
}

.login-hint i {
    color: var(--secondary);
    margin-right: 0.3rem;
}

.login-hint code {
    background: var(--darker-bg);
    padding: 0.3rem 0.6rem;
    border-radius: 5px;
    color: var(--primary);
    font-family: 'Courier New', monospace;
    font-weight: bold;
}

/* Admin Panel */
.admin-panel {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 500px;
    height: 100vh;
    background: var(--card-bg);
    box-shadow: -5px 0 20px rgba(0, 0, 0, 0.5);
    z-index: 10000;
    transition: right 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    overflow-y: auto;
}

.admin-panel.active {
    right: 0;
}

.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: var(--darker-bg);
    border-bottom: 2px solid var(--primary);
    position: sticky;
    top: 0;
    z-index: 10;
}

.admin-header h2 {
    color: var(--primary);
    font-size: 1.3rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-header-actions {
    display: flex;
    gap: 0.5rem;
}

.btn-logout,
.close-admin {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-logout:hover,
.close-admin:hover {
    background: var(--primary);
    color: var(--darker-bg);
}

.btn-logout {
    border-color: #ff4444;
    color: #ff4444;
}

.btn-logout:hover {
    background: #ff4444;
    color: white;
}

.admin-content {
    padding: 1.5rem;
}

.admin-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
}

.tab-btn {
    padding: 0.6rem 1rem;
    background: var(--darker-bg);
    border: 1px solid rgba(0, 255, 136, 0.2);
    color: var(--text-secondary);
    border-radius: 8px;
    cursor: pointer;
    transition: var(--transition);
    font-size: 0.9rem;
}

.tab-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
}

.tab-btn.active {
    background: var(--primary);
    color: var(--darker-bg);
    border-color: var(--primary);
}

.admin-section {
    display: none;
}

.admin-section.active {
    display: block;
}

.admin-section h3 {
    color: var(--primary);
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.admin-section h4 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: 1rem;
}

.form-group {
    margin-bottom: 1.2rem;
}

.form-group label {
    display: block;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 0.8rem;
    background: var(--darker-bg);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 8px;
    color: var(--text-primary);
    font-family: inherit;
    font-size: 0.95rem;
    transition: var(--transition);
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 10px rgba(0, 255, 136, 0.2);
}

.btn-add,
.btn-save,
.btn-export,
.btn-import,
.btn-reset {
    padding: 0.8rem 1.5rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.5rem 0.5rem 0.5rem 0;
    font-size: 0.9rem;
}

.btn-add {
    background: rgba(0, 255, 136, 0.1);
    color: var(--primary);
    border: 1px solid var(--primary);
    width: 100%;
    justify-content: center;
}

.btn-add:hover {
    background: var(--primary);
    color: var(--darker-bg);
}

.btn-save {
    background: var(--gradient);
    color: var(--darker-bg);
}

.btn-export,
.btn-import {
    background: rgba(0, 102, 255, 0.1);
    color: var(--secondary);
    border: 1px solid var(--secondary);
}

.btn-reset {
    background: rgba(255, 0, 0, 0.1);
    color: #ff4444;
    border: 1px solid #ff4444;
}

.admin-actions {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 255, 136, 0.1);
}

/* Dynamic Edit Items */
.edit-item {
    background: var(--darker-bg);
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    margin-bottom: 1rem;
    position: relative;
}

.edit-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.edit-item-header h5 {
    color: var(--primary);
    font-size: 1rem;
}

.btn-remove {
    background: rgba(255, 0, 0, 0.1);
    color: #ff4444;
    border: 1px solid #ff4444;
    padding: 0.4rem 0.8rem;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.85rem;
}

.btn-remove:hover {
    background: #ff4444;
    color: white;
}

/* Navbar */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    z-index: 1000;
    box-shadow: 0 2px 20px rgba(0, 255, 136, 0.1);
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-brand a {
    font-size: 1.3rem;
    font-weight: bold;
    color: var(--primary);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    position: relative;
    padding: 0.5rem 0;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary);
    transition: width 0.3s ease;
}

.nav-link:hover,
.nav-link.active {
    color: var(--primary);
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
}

.hamburger span {
    width: 25px;
    height: 3px;
    background: var(--primary);
    transition: var(--transition);
}

.hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
}

.hamburger.active span:nth-child(2) {
    opacity: 0;
}

.hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 100px 1rem 50px;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

#matrixCanvas {
    width: 100%;
    height: 100%;
}

.hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    padding: 0 1rem;
}

.glitch {
    font-size: clamp(2rem, 8vw, 4rem);
    font-weight: 900;
    text-transform: uppercase;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
}

.hero-subtitle {
    font-size: clamp(1.2rem, 4vw, 1.8rem);
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 300;
}

.hero-description {
    font-size: clamp(1rem, 2vw, 1.1rem);
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.8;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn {
    padding: 0.9rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    display: inline-block;
    border: 2px solid transparent;
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.btn-primary {
    background: var(--gradient);
    color: var(--darker-bg);
    box-shadow: var(--glow);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 30px rgba(0, 255, 136, 0.5);
}

.btn-secondary {
    background: transparent;
    color: var(--primary);
    border: 2px solid var(--primary);
}

.btn-secondary:hover {
    background: var(--primary);
    color: var(--darker-bg);
    transform: translateY(-3px);
}

/* Sections */
section {
    padding: clamp(3rem, 10vw, 6rem) 1rem;
}

.section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    text-align: center;
    margin-bottom: 3rem;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.section-title::after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background: var(--gradient);
    margin: 1rem auto 0;
    border-radius: 2px;
}

/* About Section */
.about {
    background: var(--darker-bg);
}

.about-text {
    max-width: 900px;
    margin: 0 auto;
}

.lead {
    font-size: clamp(1.2rem, 3vw, 1.4rem);
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-weight: 300;
}

#aboutParagraphs p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-size: clamp(1rem, 2vw, 1.1rem);
}

.about-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
}

.stat {
    text-align: center;
    padding: 2rem 1rem;
    background: var(--card-bg);
    border-radius: 15px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    transition: var(--transition);
}

.stat:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow);
}

.stat i {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 1rem;
}

.stat h3 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    color: var(--primary);
    margin-bottom: 0.5rem;
}

.stat p {
    color: var(--text-secondary);
    margin: 0;
    font-size: clamp(0.9rem, 2vw, 1rem);
}

/* Timeline */
.timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 0;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 0;
    width: 2px;
    height: 100%;
    background: linear-gradient(to bottom, var(--primary), var(--secondary));
}

.timeline-item {
    position: relative;
    margin-bottom: 3rem;
    padding-left: 60px;
}

.timeline-dot {
    position: absolute;
    left: 11px;
    top: 0;
    width: 20px;
    height: 20px;
    background: var(--primary);
    border-radius: 50%;
    box-shadow: var(--glow);
}

.timeline-content {
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: 15px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    transition: var(--transition);
}

.timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow);
}

.timeline-content h3 {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: var(--primary);
    margin-bottom: 0.5rem;
}

.timeline-content h4 {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-weight: 400;
}

.timeline-content ul {
    list-style: none;
}

.timeline-content li {
    color: var(--text-secondary);
    margin-bottom: 0.8rem;
    padding-left: 1.5rem;
    position: relative;
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.timeline-content li::before {
    content: 'â–¹';
    position: absolute;
    left: 0;
    color: var(--primary);
}

/* Skills */
.skills {
    background: var(--darker-bg);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.skill-category {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    transition: var(--transition);
}

.skill-category:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow);
}

.category-icon {
    font-size: 3rem;
    color: var(--primary);
    margin-bottom: 1.5rem;
}

.skill-category h3 {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    margin-bottom: 1.5rem;
    color: var(--primary);
}

.skill-list {
    list-style: none;
}

.skill-list li {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.skill-list i {
    color: var(--primary);
}

.certifications {
    text-align: center;
    margin-top: 4rem;
}

.certifications h3 {
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--primary);
    margin-bottom: 2rem;
}

.cert-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
}

.cert-badge {
    background: var(--card-bg);
    color: var(--primary);
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    border: 2px solid var(--primary);
    font-weight: 600;
    transition: var(--transition);
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.cert-badge:hover {
    background: var(--primary);
    color: var(--darker-bg);
    transform: scale(1.05);
}

/* Projects */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.project-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    transition: var(--transition);
}

.project-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow);
}

.project-icon {
    font-size: 3rem;
    color: var(--primary);
    margin-bottom: 1.5rem;
}

.project-card h3 {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.project-card p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 1.5rem;
}

.tag {
    background: rgba(0, 255, 136, 0.1);
    color: var(--primary);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    border: 1px solid rgba(0, 255, 136, 0.2);
}

.project-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: var(--transition);
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.project-link:hover {
    gap: 1rem;
}

/* Contact */
.contact {
    background: var(--darker-bg);
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
}

.contact-description {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.8;
}

.contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.contact-method {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--card-bg);
    border-radius: 10px;
    border: 1px solid rgba(0, 255, 136, 0.1);
    transition: var(--transition);
}

.contact-method:hover {
    transform: translateX(5px);
    box-shadow: var(--shadow);
}

.contact-method i {
    font-size: 2rem;
    color: var(--primary);
    min-width: 40px;
}

.contact-method h4 {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--text-primary);
    margin-bottom: 0.3rem;
}

.contact-method a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition);
    font-size: clamp(0.85rem, 2vw, 0.95rem);
    word-break: break-all;
}

.contact-method a:hover {
    color: var(--primary);
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 1rem;
    background: var(--card-bg);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 10px;
    color: var(--text-primary);
    font-size: clamp(0.9rem, 2vw, 1rem);
    font-family: inherit;
    transition: var(--transition);
}

.contact-form input:focus,
.contact-form textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 10px rgba(0, 255, 136, 0.2);
}

.contact-form textarea {
    resize: vertical;
    min-height: 150px;
}

.contact-form .btn {
    width: 100%;
    cursor: pointer;
    border: none;
}

/* Footer */
.footer {
    background: var(--darker-bg);
    padding: 2rem 1rem;
    border-top: 1px solid rgba(0, 255, 136, 0.1);
}

.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer p {
    color: var(--text-secondary);
    font-size: clamp(0.85rem, 2vw, 1rem);
}

.social-links {
    display: flex;
    gap: 1.5rem;
}

.social-links a {
    color: var(--text-secondary);
    font-size: 1.5rem;
    transition: var(--transition);
}

.social-links a:hover {
    color: var(--primary);
    transform: translateY(-3px);
}

/* Responsive Design */
@media (min-width: 768px) {
    .contact-content {
        grid-template-columns: 1fr 1fr;
    }

    .timeline::before {
        left: 50%;
        transform: translateX(-50%);
    }

    .timeline-item {
        width: calc(50% - 40px);
        padding-left: 0;
    }

    .timeline-item:nth-child(odd) {
        left: 0;
        text-align: right;
        padding-right: 40px;
    }

    .timeline-item:nth-child(even) {
        left: calc(50% + 40px);
        padding-left: 40px;
    }

    .timeline-dot {
        left: auto;
    }

    .timeline-item:nth-child(odd) .timeline-dot {
        right: -10px;
        left: auto;
    }

    .timeline-item:nth-child(even) .timeline-dot {
        left: -10px;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        position: fixed;
        left: -100%;
        top: 70px;
        flex-direction: column;
        background: rgba(10, 14, 39, 0.98);
        width: 100%;
        text-align: center;
        transition: left 0.3s ease;
        padding: 2rem 0;
        box-shadow: 0 10px 27px rgba(0, 0, 0, 0.3);
        gap: 0;
    }

    .nav-menu li {
        padding: 1rem 0;
    }

    .nav-menu.active {
        left: 0;
    }

    .hamburger {
        display: flex;
    }

    .hero-buttons {
        flex-direction: column;
        width: 100%;
    }

    .btn {
        width: 100%;
    }

    .admin-panel {
        max-width: 100%;
    }

    .admin-toggle {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
    }
}

@media (max-width: 480px) {
    .about-stats {
        grid-template-columns: 1fr;
    }

    .cert-grid {
        flex-direction: column;
        align-items: stretch;
    }

    .projects-grid {
        grid-template-columns: 1fr;
    }

    .skills-grid {
        grid-template-columns: 1fr;
    }
}
